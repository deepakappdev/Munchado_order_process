<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large">


        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/tv_archive_order_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ARCHIVE ORDERS"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextBold" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_archive_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Active Order"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="AvenirNextCondensedMedium" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

</LinearLayout>