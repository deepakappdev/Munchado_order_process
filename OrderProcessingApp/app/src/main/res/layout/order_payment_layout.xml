<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_order_payment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_normal"
    android:background="@color/white"
    android:visibility="gone">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical">

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal:    "
            android:textColor="@color/grey_light"

            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Deal Discount:    "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_delivery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Delivery:    "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tax:    "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_tip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tip:    "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Total:    "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:gravity="right"
        android:orientation="vertical">

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_deal_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/textSizeXXLarge"
            app:textStyle="AvenirNextCondensedMedium" />

    </LinearLayout>

</LinearLayout>