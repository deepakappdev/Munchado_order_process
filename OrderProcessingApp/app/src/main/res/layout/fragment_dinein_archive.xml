<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.munchado.orderprocess.ui.fragment.DineinArchiveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteendp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large">


            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:id="@+id/text_booking_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 ARCHIVE BOOKINGS"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/textSizeXXLarge"
                app:textStyle="HelveticaBold" />

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:id="@+id/text_archive_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Active Bookings"
                android:textColor="@color/text_light_black"
                android:textSize="@dimen/textSizeXXLarge"
                app:textFormatStyle="UNDERLINE"
                app:textStyle="HelveticaLight" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />
    </LinearLayout>

</FrameLayout>
