<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/layout_customer_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_normal"
        android:src="@drawable/profile_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_normal"
        android:orientation="vertical">

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:text="Name  "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="HelveticaLight" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="HelveticaLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:text="Email  "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="HelveticaLight" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="HelveticaLight" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:text="Tel  "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="HelveticaLight" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="HelveticaLight" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:text="Past Activity  "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="HelveticaLight" />

        <com.munchado.orderprocess.ui.widgets.CustomTextView
            android:id="@+id/text_past_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeXLarge"
            app:textStyle="HelveticaLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:orientation="vertical" />
</LinearLayout>