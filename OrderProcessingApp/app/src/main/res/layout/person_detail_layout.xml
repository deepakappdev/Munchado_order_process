<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey"
    android:visibility="gone"
    android:id="@+id/layout_customer_detail"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="100dp"
        android:layout_margin="@dimen/margin_normal"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/profile_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical">

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="@color/grey_light"
                app:textStyle="RobotoLight" />

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textColor="@color/grey_light"
                app:textStyle="RobotoLight" />

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel: "
                android:textColor="@color/grey_light"
                app:textStyle="RobotoLight" />

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past Activity: "
                android:textColor="@color/grey_light"
                app:textStyle="RobotoLight" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:textStyle="RobotoMedium" />

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:textStyle="RobotoMedium" />

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:id="@+id/text_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:textStyle="RobotoMedium" />

            <com.munchado.orderprocess.ui.widgets.CustomTextView
                android:id="@+id/text_past_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:textStyle="RobotoMedium" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>