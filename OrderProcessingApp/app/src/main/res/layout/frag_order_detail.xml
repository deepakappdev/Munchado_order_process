<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/grey_border_2"
    android:padding="10dp">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/home_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.munchado.orderprocess.ui.widgets.CustomTextView
                    android:id="@+id/temp_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    app:textStyle="AvenirNextCondensedMedium" />

                <com.munchado.orderprocess.ui.widgets.CustomTextView
                    android:id="@+id/temp_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    app:textStyle="AvenirNextCondensedMedium" />

                <include
                    android:id="@+id/layout_customer_detail_1"
                    layout="@layout/person_detail_layout"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/temp_view2"
                    android:layout_below="@+id/temp_view" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/layout_customer_detail_1"
                    android:orientation="vertical">

                    <include
                        layout="@layout/order_detail_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:id="@+id/order_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:orientation="vertical" />


                    <include
                        layout="@layout/order_payment_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/special_instruction_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.munchado.orderprocess.ui.widgets.CustomTextView
                            android:id="@+id/special_instruction_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:text="Speical Instructions :"
                            android:textColor="@color/default_text_color"
                            android:textSize="@dimen/textSizeXXLarge"
                            app:textStyle="AvenirNextCondensedMedium" />

                        <com.munchado.orderprocess.ui.widgets.CustomTextView
                            android:id="@+id/speical_instruction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textColor="@color/grey_light"
                            android:textStyle="italic"
                            app:textStyle="AvenirNextCondensedMedium" />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <include
                android:id="@+id/layout_action_button"
                layout="@layout/order_action_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


    <include layout="@layout/progress_bar_layout" />


    <LinearLayout
        android:id="@+id/rl_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cross_icon_black" />
    </LinearLayout>

</RelativeLayout>