<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.munchado.orderprocess.ui.activity.settings.ProfileSettingActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/fifteendp"
            android:paddingLeft="@dimen/fifteendp"
            android:paddingRight="@dimen/fifteendp"
            android:paddingStart="@dimen/fifteendp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_resname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:counterOverflowTextAppearance="@color/prmary_txt_color"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintTextAppearance="@style/TextFloatLabelAppearance">

                <EditText
                    android:id="@+id/txt_resname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:hint="Restaurant Name"
                    android:inputType="text"
                    android:textColor="@color/default_text_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:counterOverflowTextAppearance="@color/prmary_txt_color"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintTextAppearance="@style/TextFloatLabelAppearance">

                <EditText
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:hint="Address"
                    android:inputType="text"
                    android:textColor="@color/default_text_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:counterOverflowTextAppearance="@color/prmary_txt_color"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintTextAppearance="@style/TextFloatLabelAppearance">

                <EditText
                    android:id="@+id/txt_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:hint="City"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_state_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:counterOverflowTextAppearance="@color/prmary_txt_color"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintTextAppearance="@style/TextFloatLabelAppearance">

                <EditText
                    android:id="@+id/txt_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:hint="State"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_zip_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:counterOverflowTextAppearance="@color/prmary_txt_color"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintTextAppearance="@style/TextFloatLabelAppearance">

                <EditText
                    android:id="@+id/txt_zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:hint="Zip"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:counterOverflowTextAppearance="@color/prmary_txt_color"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintTextAppearance="@style/TextFloatLabelAppearance">

                <EditText
                    android:id="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:hint="Contact No."
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:counterOverflowTextAppearance="@color/prmary_txt_color"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintTextAppearance="@style/TextFloatLabelAppearance">

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_button"
                android:onClick="save"
                android:text="Save"
                android:textColor="@color/white"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
